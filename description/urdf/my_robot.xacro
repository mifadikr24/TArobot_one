<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <!-- MATERIAL -->
    <material name="blue">
        <color rgba="0.200 0.200 1.000 1.000" />
    </material>

    <material name="black">
        <color rgba="0.000 0.000 0.000 1.000" />
    </material>

    <!-- BASE -->
    <link name="base_footprint">
    </link>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.05"/>
    </joint>
    
    <!-- LINK -->
    <link name="base_link">
        <visual>
            <origin xyz="0 0 0.028" rpy="0 0 0" />
            <geometry>
                <box size="0.3 0.15 0.056" />
            </geometry>
            <material name="blue" />
        </visual>
        <inertial>
            <origin xyz="0 0 0.028" rpy="0 0 0" />
            <mass value="1.0" />
            <inertia ixx="${(1.0/12) * (0.056*0.056 + 0.3*0.3)}" ixy="0" ixz="0"
                     iyy="${(1.0/12) * (0.15*0.15 + 0.3*0.3)}" iyz="0"
                     izz="${(1.0/12) * (0.15*0.15 + 0.056*0.056)}" />
        </inertial>
        <collision>
            <origin xyz="0 0 0.028" rpy="0 0 0" />
            <geometry>
                <box size="0.3 0.15 0.056" />
            </geometry>    
        </collision>
    </link>

    <gazebo reference="base_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <link name="mid_link">
        <visual>
            <origin xyz="0 0 0.0025" rpy="0 0 0" />
            <geometry>
                <box size="0.3 0.2 0.005" />
            </geometry>
            <material name="blue" />
        </visual>
        <inertial>
            <origin xyz="0 0 0.0025" rpy="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="${(0.5/12) * (0.005*0.005 + 0.3*0.3)}" ixy="0" ixz="0"
                     iyy="${(0.5/12) * (0.2*0.2 + 0.3*0.3)}" iyz="0"
                     izz="${(0.5/12) * (0.2*0.2 + 0.005*0.005)}" />
        </inertial>
        <collision>
            <origin xyz="0 0 0.0025" rpy="0 0 0"/>
            <geometry>
                <box size="0.3 0.2 0.005"/>
            </geometry>
        </collision>
    </link>

    <gazebo reference="mid_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <link name="top_link">
        <visual>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0.18 0.17 0.1"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <inertial>
            <origin xyz="0 0 0.05" rpy="0 0 0" />
            <mass value="2.0" />
            <inertia ixx="${(2.0/12) * (0.1*0.1 + 0.18*0.18)}" ixy="0" ixz="0"
                     iyy="${(2.0/12) * (0.17*0.17 + 0.18*0.18)}" iyz="0"
                     izz="${(2.0/12) * (0.17*0.17 + 0.1*0.1)}" />
        </inertial>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0.18 0.17 0.1"/>
            </geometry>
        </collision>
    </link>

    <gazebo reference="top_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <xacro:macro name="wheel_link" params="prefix">
        <link name="${prefix}_wheel_link">
            <visual>
                <origin xyz="0 0 0" rpy="${pi / 2.0} 0 0" />
                <geometry>
                    <cylinder radius="0.05" length="0.035" />
                </geometry>
                <material name="black" />
            </visual>
            <inertial>
                <origin xyz="0 0 0" rpy="${pi / 2.0} 0 0" />
                <mass value="0.2"/>
                <inertia ixx="${(0.2/12) * (3*0.05*0.05 + 0.035*0.035)}" ixy="0" ixz="0"
                         iyy="${(0.2/12) * (3*0.05*0.05 + 0.035*0.035)}" iyz="0"
                         izz="${(0.2/2) * (0.05*0.05)}" />
            </inertial>
            <collision>
                <origin xyz="0 0 0" rpy="${pi / 2.0} 0 0" />
                <geometry>
                    <cylinder radius="0.05" length="0.035" />
                </geometry>
            </collision>
        </link>
    </xacro:macro>

    <xacro:wheel_link prefix="rr" />
    <xacro:wheel_link prefix="rl" />
    <xacro:wheel_link prefix="fr" />
    <xacro:wheel_link prefix="fl" />

    <gazebo reference="rr_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="rl_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="fr_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="fl_wheel_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- JOINT -->
    <joint name="base_mid" type="fixed">
        <parent link="base_link"/>
        <child link="mid_link"/>
        <origin xyz="0 0 0.056" rpy="0 0 0"/>
    </joint>

    <joint name="mid_top" type="fixed">
        <parent link="mid_link"/>
        <child link="top_link"/>
        <origin xyz="-0.025 0 0.005" rpy="0 0 0"/>
    </joint>

    <joint name="rr_wheel" type="fixed">
        <parent link="base_link"/>
        <child link="rr_wheel_link"/>
        <origin xyz="-0.1 -0.0925 0" rpy="0 0 0"/>
        <axis xyz="0 1 0" />
    </joint>

    <joint name="rl_wheel" type="fixed">
        <parent link="base_link"/>
        <child link="rl_wheel_link"/>
        <origin xyz="-0.1 0.0925 0" rpy="0 0 0"/>
        <axis xyz="0 1 0" />
    </joint>

    <joint name="fr_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="fr_wheel_link"/>
        <origin xyz="0.1 -0.0925 0" rpy="0 0 0"/>
        <axis xyz="0 1 0" />
    </joint>

    <joint name="fl_wheel" type="continuous">
        <parent link="base_link"/>
        <child link="fl_wheel_link"/>
        <origin xyz="0.1 0.0925 0" rpy="0 0 0"/>
        <axis xyz="0 1 0" />
    </joint>

</robot>